body
  background linear-gradient-image(400px top, lighten($c-light, 15%), $c-light) $c-light repeat-x
  
.inner-wrapper
  width $inner-wrapper-width
  min-width $inner-wrapper-min-width
  margin 0 auto
  
// Sticky footer
$footer-height = gap(1.5)
html, body
  height 100%
#container
  min-height 100%
  
#content
  padding-bottom $footer-height
  overflow auto

#footer
  margin-top -($footer-height)
  position relative
  clear both

.ie7 #container
  display table
  height 100%


#header
  background linear-gradient-image(gap(2.4) top, lighten($c-mid-cool, 5%), darken($c-mid-cool, 5%))
  border-bottom 2px solid $c-dark-cool
  clearfix()
  

  h1, nav
    inline-block()
  
  h1
    font-size(2.4)
    width 200px
  a 
    color $c-dark-cool
    text-shadow 0 1px rgba(255,255,255,0.3)
    
  nav
    float right
    a
      padding gap(0.75) gap(1) gap(0.25)
      display block
      font-variant small-caps
      font-size(1.4)
      font-family $display-font-family
      &:hover
        background linear-gradient-image(gap(2.4) top, lighten($c-mid-cool, 25%), lighten($c-mid-cool, 5%))
    .active a
      background linear-gradient-image(gap(2.4) top, darken($c-mid-cool, 45%), $c-mid-cool)
      border-width 0 1px 0 
      border-style solid
      border-color lighten($c-mid-cool, 5%)
      color #fff
      text-shadow 0 1px rgba(0,0,0,0.25)
    


#content
  background lighten($c-light, 20%)
  width 95%
  min-width $inner-wrapper-min-width
  min-height 100%
  margin 0 auto
  border-left gap(0.25) solid darken($c-light, 20%)
  border-right gap(0.25) solid darken($c-light, 20%)
  text-align center
  
  &>div>section, &>div>aside
    inline-block()
    text-align left
    position relative

  section header
    border-width 5px 0 2px
    border-style solid
    padding-bottom gap(0.5)
    margin-bottom gap(0.5)
    clearfix()

    h1
      font-size(3)
      
  section section header
    border-width 0 0 1px
    border-style solid
    padding-bottom gap(0.5)
    margin-bottom gap(0.5)
    clearfix()

    h1
      font-size(1.8)

  .col-inner    
    padding gap(0.5)

  section section
    padding-bottom gap(0.5)
    margin-bottom gap(0.5)
    border-width 0 0 1px
    border-style dotted

#footer
  background $c-dark-cool
  color lighten($c-light, 20%)
  font-size(0.9)
  text-align center
  height $footer-height
  line-height $footer-height
  a
    color $c-light