a.define-edit-button(href="#/define/#{type}/#{_id}/update") Edit Access
a.define-delete-button(href="#/define/#{type}/#{_id}/delete") Delete Access

hgroup
  h2 Access group details:
  h1= name

h3 Slug
p= slug

h3 Description
p= desc

- if (type == 'access')
  p= enable
  h3 Enabled?
  - if (enable == 'on' || enable == true)
    p.enabled Enabled
  - else
    p.disabled Disabled

- if (type == 'accessGroup')
  h3 Access permissions
  dl
    dt Login
    dd.allow Allow
    dt View Profile
    dd.allow Allow
    dt Check credits
    dd.allow Allow
    dt Access admin area
    dd.deny Deny